psql -h localhost -p 5432 -U postgres -d postgres

postgres=# CREATE DATABASE user_messages;
CREATE DATABASE

postgres=# \c user_messages
You are now connected to database "user_messages" as user "postgres".

user_messages=# \c postgres
You are now connected to database "postgres" as user "postgres".

postgres=# DROP DATABASE user_messages;
DROP DATABASE

postgres=# \q
